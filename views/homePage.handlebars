    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>

<body>
  <h1>Foodie Homepage</h1>
  <br>
  <br>
  <label> Enter access token </label>
  <input id="access_token">
  <button id="btn"> Click to see feed </button>
  <br>
  <br>
  <div class="faceook" align="center">
      <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
      </fb:login-button>
    </div>

  <div class ="col" align="center">
      {{#each posts}}
        {{> post post=this}}  
      {{/each}}
    
  
  </div>


  <div id="content"></div>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script>
    $(document).ready( () => {
      
      $("#btn").on('click', function () {
        $('#content').html("");
        const access_token = $('#access_token').val();
        $.ajax({
          url: 'api/profiles/feed',
          type: 'GET',
          datatype: 'json',
          beforeSend: function (xhr){
            xhr.setRequestHeader("Authorization", 'Bearer '+access_token);
          },
          success: (data) => {
            $('#content').html("");
            $.each(data, function() {
                var url = "/api/photos/" + this.picture;
                var profile_pic = this.profile_picture;
                var toAdd = '<img src="' + url + '" width="150" height="150"><br>';
                toAdd += '<p><img src="' + profile_pic + '" width="50" height="50">';
                toAdd += '<strong>' + this.username + '</strong>' + ": " + this.caption + '</p>';
                toAdd += '<p>' + this.date+'</p>';
                toAdd += '<hr>';
                $('#content').append(toAdd);
              });
          },
          error: (err) => {
            alert(JSON.stringify(err));
          }
        });
      });

    });
  </script>

</body>
</html>
