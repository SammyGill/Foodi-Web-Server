<div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <h4 class="modal-title" id="modal-title-text"></h4>
      </div>
      
      <div class="modal-body" id="modal-body" style="margin: 1px; padding: 1px;">
        <br>
        <p id="modal-body-text"></p>
        <br>
      </div>
      
      <div class="modal-footer">
        <button id="alertModal_close" type="button" class="btn btn-secondary">Close</button>
      </div>

    </div>
  </div>
</div>

<style type="text/css">
  #alertModal {
  padding-top: 20%;
}
</style>

<script>
  let title;
  function alertModal(titleMessage, bodyMessage) {
    title = titleMessage;
    if (bodyMessage) {
      $('#modal-body').show();
      $('#modal-body-text').text(bodyMessage);
    }
    else {
      $('#modal-body').hide();
    }
    
    $('#modal-title-text').text(titleMessage);
    $('#alertModal').modal();
  }

  $('#alertModal_close').click( () => {
    $('#alertModal').modal('hide'); 
    if (title == 'Post deleted') 
      $('.close-modal').click();
  })

</script>

