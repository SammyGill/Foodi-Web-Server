 <div class="card" style="width: 50%;margin-bottom:100px;"
 onClick="showModal('{{profile_picture}}','{{username}}','{{date}}','{{picture}}',
                    '{{dish_name}}','{{caption}}','{{rating}}','{{likes}}','{{dislikes}}', '{{restaurant_id}}')">
    <div class="card-header">  
        <a href="/profiles/{{username}}"> 
          <p style="text-align:left;"> 
            <img style="width: 70px; length: 70px; display:inline; padding-right:10px;" src="{{profile_picture}}">
            <span> {{username}} </span> </a>
            <span style="float:right;">{{date}}</span>
          </p>
    </div>

    <div class="card-body">
        <img class="card-img-top" style="width: 100%; height: 100%;"src="/api/photos/{{picture}}" alt="Card image cap">
    </div>
  </div>